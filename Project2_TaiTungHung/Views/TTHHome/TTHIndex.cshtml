@{
    ViewData["Title"] = "Trang chủ";
}
<section class="py-4 border-bottom">
    <div class="container">
        <div class="row g-3 g-md-4">
            <div class="col-12 col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <img class="card-img-top" src="https://placehold.co/600x400" alt="Bánh sinh nhật">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-2">Bánh sinh nhật</h5>
                        <a href="#" class="btn btn-dark mt-auto">Xem ngay</a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <img class="card-img-top" src="https://placehold.co/600x400" alt="Bánh tươi">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-2">Bánh tươi</h5>
                        <a href="#" class="btn btn-dark mt-auto">Xem ngay</a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <img class="card-img-top" src="https://placehold.co/600x400" alt="Bánh miếng nhỏ">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-2">Bánh miếng nhỏ</h5>
                        <a href="#" class="btn btn-dark mt-auto">Xem ngay</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">Sản phẩm mới</h3>
            <a href="#" class="btn btn-outline-dark btn-sm">Xem thêm</a>
        </div>
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
            @for (int i = 0; i < 8; i++)
            {
                <div class="col">
                    <div class="card border-0 shadow-sm h-100">
                        <img class="card-img-top" src="https://placehold.co/600x600" alt="Sản phẩm mới">
                        <div class="card-body">
                            <h6 class="card-title text-truncate">Tên sản phẩm</h6>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold">35,000₫</span>
                                <a href="#" class="btn btn-sm btn-dark">Mua ngay</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">Sản phẩm bán chạy</h3>
            <a href="#" class="btn btn-outline-dark btn-sm">Xem thêm</a>
        </div>
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
            @for (int i = 0; i < 8; i++)
            {
                <div class="col">
                    <div class="card border-0 shadow-sm h-100">
                        <img class="card-img-top" src="https://placehold.co/600x600" alt="Sản phẩm bán chạy">
                        <div class="card-body">
                            <h6 class="card-title text-truncate">Tên sản phẩm</h6>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold">25,000₫</span>
                                <a href="#" class="btn btn-sm btn-dark">Mua ngay</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-md-6">
                <h3 class="mb-3">Về chúng tôi</h3>
                <p>Mỗi chiếc bánh đều được làm 100% hand-made với sự tinh tế và tỉ mỉ.</p>
                <a href="#" class="btn btn-dark">Xem ngay</a>
            </div>
            <div class="col-md-6">
                <img class="img-fluid rounded shadow-sm" src="https://placehold.co/800x500" alt="Về chúng tôi">
            </div>
        </div>
    </div>
</section>
